#!/bin/sh
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}INFO: Installing NodeJS 6.x...${NC}"
curl -sL https://deb.nodesource.com/setup_6.x | sudo -E bash -
sudo apt install -y nodejs
echo -e "${BLUE}INFO: Installing Citus IoT Device SDK...${NC}"
https://github.com/cuongquay/citus-iot-sdk-nodejs.git $HOME/citus-iot-sdk-nodejs/
cd $HOME/citus-iot-sdk-nodejs/ && npm install && npm update
echo -e "${GREEN}==============================="
echo -e "| Installed SDK successfully! |"
echo -e "===============================${NC}"
echo -e "${BLUE}INFO: Try 'npm run test' to test your connection.${NC}"